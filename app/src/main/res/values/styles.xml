<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PlayerSelect" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/magic_8dp</item>
        <item name="android:layout_margin">@dimen/magic_8dp</item>
        <item name="android:background">@drawable/ripple_ff8c00_rounded_4169e1</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AdjustmentTextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">@dimen/magic_8dp</item>
    </style>

    <style name="AdjustmentSeekBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_marginTop">@dimen/magic_8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">0dp</item>
    </style>
</resources>